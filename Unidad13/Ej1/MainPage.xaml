<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej1.MainPage">
    <ContentPage.Resources>

        <LinearGradientBrush x:Key="buttonBackground">

            <GradientStop Offset="0" Color="Silver"/>

            <GradientStop Offset="1" Color="Orange"/>

        </LinearGradientBrush>

    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Button Text="Hello I am a button using a resource" Background="{StaticResource buttonBackground}"></Button>
            <Button Text="Hello I am a button using a resource" Background="{StaticResource buttonBackground2}"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
